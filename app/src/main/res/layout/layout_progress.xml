<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@null"
    >

    <ImageView
        android:layout_width="111px"
        android:layout_height="111px"
        android:id="@+id/ivRound"
        android:src="@drawable/icon_circle_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivLoadingText"
        app:layout_constraintVertical_chainStyle="packed"

        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivRound"
        app:layout_constraintBottom_toBottomOf="@id/ivRound"
        app:layout_constraintLeft_toLeftOf="@id/ivRound"
        app:layout_constraintRight_toRightOf="@id/ivRound"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLoadingText"
        android:text="@string/pop_text_loading"
        android:textSize="@dimen/sp14"
        android:textColor="@color/c_white"
        app:layout_constraintTop_toBottomOf="@id/ivRound"
        app:layout_constraintLeft_toLeftOf="@id/ivRound"
        app:layout_constraintRight_toRightOf="@id/ivRound"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20px"
        />

</androidx.constraintlayout.widget.ConstraintLayout>